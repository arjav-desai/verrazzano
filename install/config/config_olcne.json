{
   "environmentName": "default",
   "dns": {
      "type": "external", 
      "external": {
         "suffix": "my.domain.suffix"
      }
   },
   "ingress": {
      "type": "LoadBalancer",
      "verrazzano": {
         "nginxInstallArgs": [
            {
               "name": "controller.service.externalTrafficPolicy",
               "value": "Local"
            },
            {
               "name": "controller.autoscaling.enabled",
               "value": "true"
            },
            {
               "name": "controller.autoscaling.minReplicas",
               "value": 2
            },
            {
               "name": "controller.service.nodePorts.http",
               "value": 30080
            },
            {
               "name": "controller.service.nodePorts.https",
               "value": 30443
            },
            {
               "name": "controller.service.ports.healthz",
               "value": "30254"
            },
            {
               "name": "controller.service.nodePorts.healthz",
               "value": 30254
            },
            {
               "name": "controller.service.targetPorts.healthz",
               "value": "healthz"
            },
            {
               "name": "controller.service.externalIPs[0]",
               "value": "10.20.30.40"
            }
         ]
      },
      "application": { 
         "additionalExternalIPs": [ "IP-address-of ingress-verrazzano.<env name>.<dns suffix>" ]
      }
   }
}
